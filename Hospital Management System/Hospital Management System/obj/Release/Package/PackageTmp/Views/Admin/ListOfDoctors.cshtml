@model IEnumerable<Hospital_Management_System.Models.Doctor>

@{
    ViewBag.Title = "Danh sách bác sĩ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
    <li class="active">Bác sĩ</li>
    <li class="active">Danh sách bác sĩ</li>
    </ol>
</div>

<h2>Danh sách bác sĩ</h2>

<p>
    @Html.ActionLink("Thêm bác sĩ", "AddDoctor", null, new { @class = "btn btn-primary" })
</p>
<table id="table_id" class="table">
    <thead>
        <tr>
            
            <th>
                Tên
            </th>
            <th>
                Khoa/Bộ phận
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Số liên lạc
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Học vấn
            </th>
            <th>
                Trạng thái
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    @if (item.Gender == "Male") { <span>Nam</span> } else if (item.Gender == "Female") { <span>Nữ</span> } else { <span>@item.Gender</span> }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Education)
                </td>
                <td>
                    @if (item.Status == "Active") { <span>Hoạt động</span> } else if (item.Status == "Inactive") { <span>Không hoạt động</span> } else { <span>@item.Status</span> }
                </td>
                <td>
                    <a href="@Url.Action("EditDoctors", new {id = item.Id})" class="fa fa-pencil-square-o" style="font-size: 19px" title="Sửa"></a> |
                    <a href="@Url.Action("DoctorDetail", new {id = item.Id})" class="fa fa-info-circle" style="font-size: 19px; color: lightblue" title="Thông tin"></a> |
                    <a href="@Url.Action("DeleteDoctor", new {id = item.ApplicationUserId})" class="fa fa-trash" style="font-size: 19px; color: red" title="Xóa"></a>
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#table_id").dataTable();
        });
    </script>
}
